{{!--  // google auth  --}}
<div class="row">
    <div class="col s12 m8">
        <h3>CreationGoal #{{creationGoal.creationNumber}}</h3>
        <br>       
        <div class="card creationGoal">
            <div class="edit-icon-wrapper">
                <small>{{{editIcon creationGoal.user user creationGoal._id}}}</small>
            </div>
            <div class="card-content show-content">
                <hr>
                <span class="card-title">                 
                  {{formatDate creationGoal.creationDate 'MMMM Do YYYY, h:mm a'}}                 
                </span>
                <hr>
                <table class="lg-view">
                    <tr> <th>Goal :</th>  <td>{{creationGoal.goal}}</td> </tr>
                    <tr> <th>Motivator :</th>  <td>{{creationGoal.motivator}}</td> </tr>
                    <tr> <th>Desire :</th>  <td>{{creationGoal.desire}}</td> </tr>               
                    <tr> <th>Belief :</th> <td>{{creationGoal.belief}}</td> </tr>
                    <tr> <th>Knowledge :</th> <td>{{creationGoal.knowledge}}</td> </tr> 
                    <tr> <th>Plan :</th> <td>{{creationGoal.plan}}</td> </tr>
                    <tr> <th>Action :</th> <td>{{creationGoal.action}}</td> </tr> 
                    <tr> <th>Victory :</th> <td>{{creationGoal.victory}}</td> </tr>
                    <tr> <th>Status :</th> <td>{{creationGoal.status}}</td> </tr>
                    {{!-- <p>{{stripTags (truncate body 150)}}</p> --}} 
                </table>  
                
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{creationGoal.user.displayName}}</span>
                <img src="{{creationGoal.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/creationGoals/user/{{creationGoal.user._id}}">More From {{creationGoal.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>